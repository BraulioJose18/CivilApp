<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".formula.FormPermeametroCargaVariable">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:text="PERMEÁMETRO DE CARGA VARIABLE"
        android:gravity="center"
        android:textColor="@color/cherry"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fórmula a utilizar:"
                android:layout_marginTop="20dp"
                android:textColor="@color/cherry"
                android:textSize="18sp"
                android:layout_marginStart="20sp"
                android:textStyle="italic|bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/cherry"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center">

                <ImageView
                    android:id="@+id/imageView"
                    android:padding="4sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/permeametro_variable"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donde:"
                android:textColor="@color/cherry"
                android:textSize="18sp"
                android:layout_marginTop="20sp"
                android:layout_marginStart="20sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="L: Longitud de la muestra"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/permVariableLongMuestra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese la longitud de la muestra"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D: Diámetro de la muestra"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/permVariableDiamMuestra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese el diámetro de la muestra"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="d: Diámetro de la bureta"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/permVariableDiamBureta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese el diámetro de la bureta"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="t2 − t1: Tiempo en que se efectúa la prueba"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/permVariableTiempoPrueba"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese el tiempo en que se efectúa la prueba"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="h - h1: Lectura de Agua"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/permVariableH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese h"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <EditText
                android:id="@+id/permVariableH1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese h2"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A: Área de la sección transversal"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/permVariableAreaSeccTransversal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint=""
                android:enabled="false"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="a: Área de la bureta"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/permVariableAreaBureta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint=""
                android:enabled="false"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resultado"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/resultadoPermCargaVariable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Resultado"
                android:ems="10"
                android:enabled="false"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>


            <Button
                android:id="@+id/calPermVariable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:layout_marginBottom="40sp"
                android:background="@drawable/button_style"
                android:text="CALCULAR"
                android:textColor="#FFFFFF"/>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>