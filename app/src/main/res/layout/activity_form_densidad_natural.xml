<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".formula.FormLimiteContraccion">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:text="DENSIDAD NATURAL CON PARAFINA"
        android:gravity="center"
        android:textColor="@color/cherry"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fórmula a utilizar:"
                android:layout_marginTop="20dp"
                android:textColor="@color/cherry"
                android:textSize="18sp"
                android:layout_marginStart="20sp"
                android:textStyle="italic|bold" />

            <ImageView
                android:id="@+id/imageView"
                android:padding="4sp"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/densidad_parafina"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donde:"
                android:textColor="@color/cherry"
                android:textSize="18sp"
                android:layout_marginTop="20sp"
                android:layout_marginStart="20sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wm: Peso de la muestra"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/denNatPesoMuestra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese el peso de la muestra"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wm+pa: Peso de la muestra + parafina"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/denNatPesoMuestraMasParafina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese el peso de la muestra + parafina"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wp+w: Peso del picnómetro + agua"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/denNatPesoPicnoMasAgua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese el peso del picnómetro + agua"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wm+pa+p+w: Peso de la muestra + picnómetro + agua + parafina"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/denNatPesoMuestraMasPicnoMasAguaMasParafina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese el peso de la muestra + picnómetro + agua + parafina"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="w: Contenido de humedad"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/denNatContHumedad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese el contenido de humedad"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>


            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yw: Densidad del agua"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/denNatDenAgua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="1"
                android:text="1"
                android:enabled="false"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ypa: Densidad de la parafina"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/denNatDenParafina"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:enabled="false"
                android:hint="0.934"
                android:text="0.934"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESULTADO Vm: Volumen de la muestra"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/denNatResulVolMuestra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint=""
                android:enabled="false"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>


            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESULTADO Yw: Densidad natural"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/denNatResulDenNat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint=""
                android:enabled="false"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RESULTADO Yd: Densidad seca"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/denNatResulDenSeca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint=""
                android:enabled="false"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <Button
                android:id="@+id/calDenNat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:layout_marginBottom="40sp"
                android:background="@drawable/button_style"
                android:text="CALCULAR"
                android:textColor="#FFFFFF"/>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>