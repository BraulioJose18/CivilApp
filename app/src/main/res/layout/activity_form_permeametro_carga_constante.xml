<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".formula.FormPermeametroCargaConstante">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:text="PERMEÁMETRO DE CARGA CONSTANTE"
        android:gravity="center"
        android:textColor="@color/cherry"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fórmula a utilizar:"
                android:layout_marginTop="20dp"
                android:textColor="@color/cherry"
                android:textSize="18sp"
                android:layout_marginStart="20sp"
                android:textStyle="italic|bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/cherry"
                app:cardCornerRadius="8dp"
                android:layout_marginTop="10dp"
                android:textAlignment="center">

                <ImageView
                    android:id="@+id/imageView"
                    android:padding="4sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/permeametro_constante"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donde:"
                android:textColor="@color/cherry"
                android:textSize="18sp"
                android:layout_marginTop="20sp"
                android:layout_marginStart="20sp"
                android:textStyle="italic|bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="V: Volumen de agua "
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/permConstanteVolumenAgua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese el volumen del agua"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="L: Longitud de la muestra"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/permConstanteLongMuestra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese la longitud de la muestra"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A: Área de la sección transversal"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/permConstanteAreaSeccTransversal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese el área de la sección transversal"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="H: Altura de carga hidraulica"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/permConstanteAltCargaHidraulica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese la altura de carga hidraulica"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="t: Tiempo"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/permConstanteTiempo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Ingrese el tiempo"
                android:ems="10"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resultado"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:textStyle="italic|bold" />

            <EditText
                android:id="@+id/resultadoPermCargaConstante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:background="@drawable/round_border"
                android:hint="Resultado"
                android:ems="10"
                android:enabled="false"
                android:padding="10dp"
                android:textColorHint="@color/cherry"
                android:textColor="@color/cherry"
                android:inputType="textPersonName"
                android:textStyle="italic"/>


            <Button
                android:id="@+id/calPermConstante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginStart="40sp"
                android:layout_marginEnd="40sp"
                android:layout_marginBottom="40sp"
                android:background="@drawable/button_style"
                android:text="CALCULAR"
                android:textColor="#FFFFFF"/>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>